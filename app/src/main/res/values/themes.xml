<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/material_dynamic_neutral10</item>
        <item name="android:itemTextAppearance">@style/customStyle</item>
    </style>


    <style name="ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:background">@color/roundColor</item>
        <item name="android:itemTextAppearance">@style/customStyle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="customStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

</resources>